<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Timer.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <Button
				WidthRequest="200"
				FontSize="20"
                Text="Budget"
				BackgroundColor="Green"
                Clicked="NavigateToBudget" />

			<Button
				WidthRequest="200"
				FontSize="20"
                Text="Sleep"
				BackgroundColor="DarkRed"
                Clicked="NavigateToSleep" />

			<Button
				WidthRequest="200"
				FontSize="20"
                Text="Uber"
                Clicked="NavigateToUber" />
		</VerticalStackLayout>
    </ScrollView>

</ContentPage>
